<h1>Products Page</h1>

<div>
  <h3>Create a Product</h3>
  <%= form_for @product do |f| %>
    <%= f.text_field :name, placeholder: "Product Name" %><br />
    <%= f.number_field :price, placeholder: "Price", step: :any %><br />
    <%= f.number_field :quantity, placeholder: "Quantity" %><br />
    <%= f.submit %>
  <% end %>
</div>